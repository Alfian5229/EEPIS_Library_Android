<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.eepislibrary.activity.ui.list_buku.ListBukuFragment"
        android:label="@string/menu_beranda"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_home_second" />
    </fragment>
    <fragment
        android:id="@+id/nav_home_second"
        android:name="com.example.eepislibrary.activity.ui.home.HomeSecondFragment"
        android:label="@string/home_second"
        tools:layout="@layout/fragment_home_second">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/nav_home" />

        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_pemesanan"
        android:name="com.example.eepislibrary.activity.ui.pemesanan.PemesananFragment"
        android:label="@string/menu_pemesanan"
        tools:layout="@layout/fragment_pemesanan" />

    <fragment
        android:id="@+id/nav_peminjaman"
        android:name="com.example.eepislibrary.activity.ui.peminjaman.PeminjamanFragment"
        android:label="@string/menu_peminjaman"
        tools:layout="@layout/fragment_peminjaman" />

    <fragment
        android:id="@+id/nav_riwayat"
        android:name="com.example.eepislibrary.activity.ui.riwayat.RiwayatFragment"
        android:label="@string/menu_riwayat"
        tools:layout="@layout/fragment_riwayat" />

</navigation>