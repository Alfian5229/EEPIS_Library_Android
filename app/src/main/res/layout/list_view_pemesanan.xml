<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card">

    <ImageView
        android:id="@+id/pemesanan_cover_buku"
        android:layout_width="wrap_content"
        android:minHeight="150dp"
        android:maxWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_weight=".30"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/white_pens_logo"
        android:contentDescription="@string/gambar_buku" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".70"
        android:padding="10dp"
        android:paddingTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pemesanan_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/color_primary"/>

        <TextView
            android:id="@+id/tv_pemesanan_tgl_pesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="@color/color_primary"/>

        <TextView
            android:id="@+id/tv_pemesanan_batas_waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_primary"/>
    </LinearLayout>
</LinearLayout>